<h1>Articles</h1>

<%= link_to 'New post', new_article_path %>
<br/>

<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </thead>
 
<tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.body %></td>
      <td><%= link_to 'Show', article %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td> <%= link_to 'Delete', article, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%> </td>
    </tr>
  <% end %>
</tbody>
</table>
